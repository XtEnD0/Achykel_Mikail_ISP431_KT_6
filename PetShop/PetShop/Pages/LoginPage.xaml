<Page x:Class="PetShop.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PetShop.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label Content="Логин:" HorizontalAlignment="Center"></Label>
            <TextBox x:Name="loginTB" Width="150"></TextBox>
            <Label Content="Пароль:" HorizontalAlignment="Center" Margin="0,10,0,0"></Label>
            <PasswordBox x:Name="PasswordPB" Width="150"></PasswordBox>
            <Button x:Name="LoginButton" Content="Войти" Margin="0,10,0,0" Click="LoginButton_Click"></Button>
            <Button x:Name="GuestButton" Content="Гость" Margin="0,10,0,0" Click="GuestButton_Click"></Button>
        </StackPanel>
    </Grid>
</Page>
