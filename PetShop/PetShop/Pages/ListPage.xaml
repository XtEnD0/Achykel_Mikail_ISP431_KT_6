<Page x:Class="PetShop.Pages.ListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PetShop.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ListPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
        </Grid.RowDefinitions>
        <Button x:Name="ExitButton" Grid.Row="1" VerticalAlignment="Center" Click="ExitButton_Click"
                HorizontalAlignment="Left" Content="Выйти" Margin="10,0,0,0"></Button>


        <Button x:Name="AddButton" Grid.Row="1" Content="Добавить" Click="AddButton_Click"
                VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,10,0"></Button>

        <ListView x:Name="MainListView" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center">
            
        </ListView>
        
        
        
        
    </Grid>
</Page>
