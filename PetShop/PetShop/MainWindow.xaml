<Window x:Class="PetShop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PetShop"
        mc:Ignorable="d"
        Title="Магазин для животных" Height="650" Width="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"></RowDefinition>
            <RowDefinition></RowDefinition>

        </Grid.RowDefinitions>
        <Grid Background="#FF76E383" Grid.Row="0">
            <Label Content="Магазин для животных" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="25"></Label>
            <Image Source="/res/logo.png" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="250,0,0,0"></Image>

        </Grid>

        <Frame Grid.Row="1" x:Name="MainFrame" NavigationUIVisibility="Hidden"></Frame>
        
        
    </Grid>
</Window>
